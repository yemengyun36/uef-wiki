  let randomNumbers = [2, 9, 9, 9, 9, 9, 9, 9];  
  let updateCount = 0;  // 用于跟踪更新次数的变量
  const maxUpdates = 600;  // 更新1000次后开始检查每个数字

  function generateRandomNumbers() {
    updateCount++;  // 每次更新时增加计数
    if (updateCount <= maxUpdates) {
        randomNumbers = randomNumbers.map((num, idx) => idx === 0 ? 2 : Math.floor(Math.random() * 10));
    } else {
        randomNumbers = randomNumbers.map((num, idx) => num === 0 || idx === 0 ? num : Math.floor(Math.random() * 10));
    }
    // 格式化为 "2999，99，99"
    const formattedNumbers = `2${randomNumbers[1]}${randomNumbers[2]}${randomNumbers[3]}，${randomNumbers[4]}${randomNumbers[5]}，${randomNumbers[6]}${randomNumbers[7]}`;
    document.getElementById('randomNumber').textContent = formattedNumbers;
    checkAllZero();
  }

function checkAllZero() {
    if (randomNumbers.slice(1).every(num => num === 0)) {  // 排除第一个数字（始终为2）
      clearInterval(randomNumberInterval);  // 停止生成随机数
      document.getElementById('randomNumber').textContent = "SCP-CN-2236";  // 改写字符串
  }
}

  const randomNumberInterval = setInterval(generateRandomNumbers, 100);  // 每100毫秒更新一次随机数

</script>
</body>
</html>
